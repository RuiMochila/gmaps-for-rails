                :data => @json, 
                :options => { 
                # :raw => '{ animation: google.maps.Animation.BOUNCE }' ,
                # :rich_marker => true 
                :do_clustering => true,
                clusterer_maxZoom: 8, #define at which zoom level clusterer is disabled, default to 10
